{
  "name": "email-sender-adapter",
  "display_name": "Email Sender",
  "version": "0.3.0",
  "description": "Simple email sending actions. Needs to be configured with email and app password.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "homepage": "https://github.com/mozilla-iot/email-sender-adapter",
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/email-sender-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/email-sender-adapter/issues"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "index.js",
    "manifest.json",
    "node_modules",
    "email-sender-adapter.js",
    "email-sender-notifier.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "type": "notifier",
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "email": "",
      "password": "",
      "host": "smtp.gmail.com",
      "port": 465,
      "disableDevice": false
    },
    "schema": {
      "type": "object",
      "required": [
        "email",
        "password",
        "host",
        "port"
      ],
      "properties": {
        "email": {
          "title": "Email address",
          "type": "string"
        },
        "password": {
          "title": "Password",
          "type": "string"
        },
        "host": {
          "title": "SMTP host",
          "type": "string"
        },
        "port": {
          "title": "SMTP port",
          "type": "integer"
        },
        "disableDevice": {
          "title": "Disable device",
          "description": "Whether or not to disable the \"Email Sender\" device.",
          "type": "boolean"
        }
      }
    }
  },
  "dependencies": {
    "nodemailer": "^6.4.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0"
  }
}
