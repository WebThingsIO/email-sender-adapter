{
  "author": "Mozilla IoT",
  "description": "Simple email sending actions. Needs to be configured with email and app password.",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "notifier",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/mozilla-iot/email-sender-adapter",
  "id": "email-sender-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Email Sender",
  "options": {
    "default": {
      "email": "",
      "password": "",
      "host": "smtp.gmail.com",
      "port": 465,
      "disableDevice": false
    },
    "schema": {
      "type": "object",
      "required": [
        "email",
        "password",
        "host",
        "port"
      ],
      "properties": {
        "email": {
          "title": "Email address",
          "type": "string"
        },
        "password": {
          "title": "Password",
          "type": "string"
        },
        "host": {
          "title": "SMTP host",
          "type": "string"
        },
        "port": {
          "title": "SMTP port",
          "type": "integer"
        },
        "disableDevice": {
          "title": "Disable device",
          "description": "Whether or not to disable the \"Email Sender\" device.",
          "type": "boolean"
        }
      }
    }
  },
  "short_name": "Email Sender",
  "version": "0.3.1"
}
